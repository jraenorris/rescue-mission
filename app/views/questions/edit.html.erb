<div class="row">
  <%- if @question.errors.present? -%>
    <div class="large-12 alert-box alert" data-alert>
      <ul>
        <%- @question.errors.full_messages.each do |error| -%>
          <li><%= error %></li>
        <%- end -%>
      </ul>
    </div>
  <%- end -%>

  <div class="large-12">
    <h1>New Question</h1>

    <%= form_for @question do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>


      <%= f.submit "Submit" %>
    <%- end -%>

    <%= button_to "Delete Toy", @question, method: :delete, data:
    {confirm: "Are you sure you want to delete your toy?"}%>
  </div>
</div>
